{
  "compilerOptions": {
	"outDir": "./build/js/",
	"target": "ES6",
	"lib": ["DOM","ES6","DOM.Iterable","ScriptHost"],
	"module": "es6",
	"noImplicitAny": true,
	"noImplicitReturns": true,
	"noImplicitThis": true,
	"noFallthroughCasesInSwitch": true,
	"sourceMap": false,
	"strictNullChecks": true,
	"strict": true,
	"strictFunctionTypes": false,
	"jsx": "react",
	"moduleResolution": "node",
	"experimentalDecorators": true,
	"baseUrl": ".",
	"paths": {
	  "endpoints": [
		"build/tsgen/endpoints.ts"
	  ]
	}
  },
  "exclude": [
	"node_modules",
	"src/main/webextension"
  ]
}
